<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef MayRequire="Ludeon.RimWorld.Biotech" ParentName="LampBase">
    <defName>SanguophageMeetingLamp</defName>
    <label>blood lamp</label>
    <description>A lamp with specially-treated bulb that produces a red light over a large area. Sanguophages gather around lights like these during their ceremonial meetings. The sanguine glow is particularly pleasing to individuals with the bloodfeeder gene. It runs on electricity and does not produce heat. People need light to move and work at full speed.</description>
    <designationCategory>Furniture</designationCategory>
    <graphicData>
      <texPath>Things/Building/Misc/Redlamp</texPath>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
        <offset>(0,0,-0.1)</offset>
      </shadowData>
    </graphicData>
    <costList>
      <Steel>20</Steel>
      <HemogenPack>1</HemogenPack>
    </costList>
    <statBases>
      <Mass>4</Mass>
      <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">5</StyleDominance>
    </statBases>
    <uiOrder>2990</uiOrder>
    <minifiedDef>MinifiedThing</minifiedDef>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>30</basePowerConsumption>
        <powerUpgrades>
          <li>
            <researchProject>ColoredLights</researchProject>
            <factor>0.5</factor>
          </li>
        </powerUpgrades>
      </li>
      <li Class="CompProperties_Styleable" />
      <li Class="CompProperties_Glower">
        <glowRadius>12</glowRadius>
        <glowColor>(460, 220, 205, 0)</glowColor>
      </li>
    </comps>
  </ThingDef>

  <ThingDef Name="TorchLamp" ParentName="TorchBase">
    <defName>UraniumTorch</defName>
    <label>uranium torch</label>
    <description>A uranium torch for lighting an area. People need light to move and work at full speed. Can be automatically refueled with uranium. Produces a great amount of heat.</description>
    <graphicData>
      <texPath>Things/Building/Misc/TorchLamp</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawRotated>false</drawRotated>
      <damageData>
        <rect>(0.35,0.35,0.3,0.3)</rect>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Misc/TorchLamp_MenuIcon</uiIconPath>
    <uiIconScale>0.85</uiIconScale>
    <statBases>
      <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">5</StyleDominance>
    </statBases>
    <placeWorkers>
      <li>PlaceWorker_Heater</li>
      <li>PlaceWorker_MeditationOffsetBuildingsNear</li>
    </placeWorkers>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <costList>
      <WoodLog>20</WoodLog>
      <Uranium>1</Uranium>
    </costList>
    <comps Inherit="False">
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>0.2</fuelConsumptionRate>
        <fuelCapacity>20.0</fuelCapacity>
        <fuelConsumptionPerTickInRain>0.0006</fuelConsumptionPerTickInRain>
        <fuelFilter>
          <thingDefs>
            <li>Uranium</li>
          </thingDefs>
        </fuelFilter>
        <initialFuelPercent>1</initialFuelPercent>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>8</heatPerSecond>
        <heatPushMaxTemperature>50</heatPushMaxTemperature>
      </li>
      <li Class="CompProperties_UraniumFireOverlay">
        <fireSize>0.5</fireSize>
        <offset>(0,0,0.1)</offset>
      </li>
      <li Class="CompProperties_Styleable" />
      <li Class="CompProperties_Glower">
        <glowRadius>10</glowRadius>
        <glowColor>(107,185,83,0)</glowColor>
      </li>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Flame</li>
          <li>Morbid</li>
        </focusTypes>
        <offsets>
          <li Class="FocusStrengthOffset_Lit">
            <offset>0.1</offset>
          </li>
          <li Class="FocusStrengthOffset_BuildingDefsLit">
            <defs>
              <li>Campfire</li>
              <li>TorchLamp</li>
              <li>TorchWallLamp</li>
              <li MayRequire="Ludeon.RimWorld.Royalty">Brazier</li>
              <li MayRequire="Ludeon.RimWorld.Royalty,Ludeon.RimWorld.Ideology">DarklightBrazier</li>
              <li MayRequire="Ludeon.RimWorld.Ideology">Darktorch</li>
              <li MayRequire="Ludeon.RimWorld.Ideology">DarktorchFungus</li>
            </defs>
            <offsetPerBuilding>0.01</offsetPerBuilding>
            <radius>9.9</radius>
            <maxBuildings>8</maxBuildings>
            <explanationKey>MeditationFocusPerFlame</explanationKey>
            <explanationKeyAbstract>MeditationFocusPerFlameAbstract</explanationKeyAbstract>
            <drawRingRadius>false</drawRingRadius>
          </li>
        </offsets>
      </li>
    </comps>
    <designationCategory>Furniture</designationCategory>
    <uiOrder>2800</uiOrder>
    <designationHotKey>Misc10</designationHotKey>
  </ThingDef>
</Defs>