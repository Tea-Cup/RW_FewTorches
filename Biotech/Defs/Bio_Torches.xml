<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ExtraWallTorch">
    <defName>SanguophageMeetingTorchWallLamp</defName>
    <label>blood wall torch lamp</label>
    <description>A specially-treated wooden wall-mounted torch that produces a red light over a large area. The sanguine glow is particularly pleasing to individuals with the bloodfeeder gene. It can be automatically refueled with wood, and produces a small amount of heat.</description>
    <uiIconPath>Things/Building/Furniture/RedWallTorch_MenuIcon</uiIconPath>
    <costList>
      <WoodLog>15</WoodLog>
      <HemogenPack>1</HemogenPack>
    </costList>
    <comps Inherit="True">
      <li Class="CompProperties_Glower">
        <glowRadius>9</glowRadius>
        <glowColor>(460, 220, 205, 0)</glowColor>
      </li>
      <li Class="CompProperties_SanguophageMeetingFire">
        <fireSize>0.5</fireSize>
        <offsetNorth>(0,0,0)</offsetNorth>
        <offsetSouth>(0,0,0.55)</offsetSouth>
        <offsetWest>(0.45,0,0.35)</offsetWest>
        <offsetEast>(-0.45,0,0.35)</offsetEast>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>3.5</heatPerSecond>
        <heatPushMaxTemperature>23</heatPushMaxTemperature>
      </li>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>1.5</fuelConsumptionRate>
        <fuelCapacity>20.0</fuelCapacity>
        <fuelConsumptionPerTickInRain>0.0006</fuelConsumptionPerTickInRain>
        <fuelFilter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </fuelFilter>
        <initialFuelPercent>0.1</initialFuelPercent>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
        <functionsInVacuum>false</functionsInVacuum>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>3.5</heatPerSecond>
        <heatPushMaxTemperature>23</heatPushMaxTemperature>
      </li>
    </comps>
    <uiOrder>2804</uiOrder>
  </ThingDef>
</Defs>