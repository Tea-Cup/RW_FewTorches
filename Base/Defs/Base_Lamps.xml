<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    uiOrder
    2990 C  StandingLamp
    2991 C  WallLamp
    2991 I* SanguophageMeetingLamp
    2991 I* SanguophageMeetingWallLamp
    2991 M  UraniumLamp
    2991 M  UraniumWallLamp
  -->

  <ThingDef Name="ExtraLampBase" ParentName="LampBase" Abstract="True">
    <designationCategory>Furniture</designationCategory>
    <statBases>
      <Mass>4</Mass>
      <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">5</StyleDominance>
    </statBases>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>30</basePowerConsumption>
        <powerUpgrades>
          <li>
            <researchProject>ColoredLights</researchProject>
            <factor>0.5</factor>
          </li>
        </powerUpgrades>
      </li>
      <li Class="CompProperties_Styleable" />
    </comps>
  </ThingDef>

  <ThingDef Name="ExtraWallLampBase" ParentName="LampBase" Abstract="True">
    <rotatable>true</rotatable>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <statBases>
      <WorkToBuild>330</WorkToBuild>
      <MaxHitPoints>35</MaxHitPoints>
      <Mass>2</Mass>
      <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">5</StyleDominance>
    </statBases>
    <uiOrder>2991</uiOrder>
    <passability>Standable</passability>
    <terrainAffordanceNeeded IsNull="True" />
    <pathCost>0</pathCost>
    <overrideMinifiedRot>North</overrideMinifiedRot>
    <minifiedDrawOffset>(0, 0, 0.2)</minifiedDrawOffset>
    <building>
      <isEdifice>false</isEdifice>
      <isAttachment>true</isAttachment>
    </building>
    <placeWorkers>
      <li>Placeworker_AttachedToWall</li>
    </placeWorkers>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>30</basePowerConsumption>
        <powerUpgrades>
          <li>
            <researchProject>ColoredLights</researchProject>
            <factor>0.5</factor>
          </li>
        </powerUpgrades>
      </li>
      <li Class="CompProperties_Styleable" />
    </comps>
  </ThingDef>

  <ThingDef ParentName="ExtraLampBase">
    <defName>UraniumLamp</defName>
    <label>uranium lamp</label>
    <description>An electrical standing lamp that lights an area with the uranium glow. People need light to move and work at full speed.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/UraniumLamp</texPath>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
        <offset>(0,0,-0.1)</offset>
      </shadowData>
    </graphicData>
    <costList>
      <Steel>20</Steel>
      <Uranium>1</Uranium>
    </costList>
    <comps Inherit="False">
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>8</basePowerConsumption>
        <powerUpgrades>
          <li>
            <researchProject>ColoredLights</researchProject>
            <factor>0.5</factor>
          </li>
        </powerUpgrades>
      </li>
      <li Class="CompProperties_Styleable" />
      <li Class="CompProperties_UraniumGlower">
        <glowRadius>12</glowRadius>
        <glowColor>(60,255,0)</glowColor>
        <darklightToggle>True</darklightToggle>
        <darklightOnLabel>Foxy.FewTorches.UranDarklightOn</darklightOnLabel>
        <darklightOffLabel>Foxy.FewTorches.UranDarklightOff</darklightOffLabel>
      </li>
    </comps>
    <uiOrder>2991</uiOrder>
  </ThingDef>

  <ThingDef ParentName="ExtraWallLampBase">
    <defName>UraniumWallLamp</defName>
    <label>uranium wall lamp</label>
    <description>A wall-mounted lamp that lights an area with the uranium glow. It is less powerful than a standing lamp, but can be mounted on walls.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/UraniumWallLamp/UraniumWallLamp</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawOffsetNorth>(0,0,0.9)</drawOffsetNorth>
      <drawOffsetSouth>(0,0,-0.9)</drawOffsetSouth>
      <drawOffsetWest>(-0.9,0,0)</drawOffsetWest>
      <drawOffsetEast>(0.9,0,0)</drawOffsetEast>
      <damageData>
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Furniture/UraniumWallLamp/UraniumWallLamp_MenuIcon</uiIconPath>
    <costList>
      <Steel>15</Steel>
      <Uranium>1</Uranium>
    </costList>
    <comps Inherit="True">
      <li Class="CompProperties_UraniumGlower">
        <glowRadius>12</glowRadius>
        <glowColor>(60,255,0)</glowColor>
        <darklightToggle>True</darklightToggle>
        <darklightOnLabel>Foxy.FewTorches.UranDarklightOn</darklightOnLabel>
        <darklightOffLabel>Foxy.FewTorches.UranDarklightOff</darklightOffLabel>
      </li>
    </comps>
    <uiOrder>2991</uiOrder>
  </ThingDef>
</Defs>